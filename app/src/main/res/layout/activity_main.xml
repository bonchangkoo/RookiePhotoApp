<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_edit_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_select_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_diary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_diary"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit_photo" />

    <Button
        android:id="@+id/btn_test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다이어리 보기(index=1)"
        app:layout_constraintTop_toBottomOf="@+id/btn_diary" />

    <Button
        android:id="@+id/btn_test2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다이어리 보기(index=2)"
        app:layout_constraintTop_toBottomOf="@+id/btn_test1" />

    <Button
        android:id="@+id/btn_test3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다이어리 보기(index=3)"
        app:layout_constraintTop_toBottomOf="@+id/btn_test2" />


</android.support.constraint.ConstraintLayout>
