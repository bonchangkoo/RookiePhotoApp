<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_backup_restore_dialog"
    android:layout_width="280dp"
    android:layout_height="108dp"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingLeft="24dp"
    android:paddingEnd="0dp"
    android:paddingRight="0dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relative_top"
        android:layout_width="match_parent"
        android:layout_height="38dp">

        <TextView
            android:id="@+id/text_ask_backup_restore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_middle"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_below="@+id/relative_top" />

    <RelativeLayout
        android:id="@+id/relative_bottom"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@+id/relative_middle"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/text_cancel"
            android:layout_width="44dp"
            android:layout_height="36dp"
            android:layout_toStartOf="@+id/text_ok"
            android:layout_toLeftOf="@+id/text_ok"
            android:gravity="center"
            android:text="@string/text_dialog_no"
            android:textColor="@color/color_FF0000" />

        <TextView
            android:id="@+id/text_ok"
            android:layout_width="44dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="@string/text_dialog_ok"
            android:textColor="@color/color_FF0000" />
    </RelativeLayout>
</RelativeLayout>