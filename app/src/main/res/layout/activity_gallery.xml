<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.camera.gallery.GalleryActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_fdb32d"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:titleTextColor="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_close_white_24" />

            <Spinner
                android:id="@+id/spinner_gallery"
                android:layout_width="176dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/btn_close"
                android:layout_toRightOf="@+id/btn_close"
                android:dropDownWidth="224dp" />

            <ImageButton
                android:id="@+id/btn_done"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_toStartOf="@+id/btn_edit"
                android:layout_toLeftOf="@+id/btn_edit"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_done_white_24" />

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_edit_white_24" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/frame_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>