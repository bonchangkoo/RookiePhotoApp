<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="kr.co.yogiyo.rookiephotoapp.diary.DiaryDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".diary.DiaryDetailActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:background="?colorAccent"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/ib_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@mipmap/back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/ib_back"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="상세"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/ib_diary_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_toLeftOf="@id/ib_diary_edit"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@mipmap/diary_delete" />

                <ImageButton
                    android:id="@+id/ib_diary_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="8dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@mipmap/diary_edit" />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".diary.DiaryDetailActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_diary_detail_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@{viewModel.dateTextLabel}"
                        android:textColor="@android:color/black"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv_diary_detail_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:text="@{viewModel.timeTextLabel}"
                        android:textColor="@android:color/black"
                        android:textSize="30sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_diary_detail_photo"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:contentDescription="@string/text_diary_test_image"
                    android:scaleType="fitCenter"
                    android:src="@{viewModel.detailImageUri}" />

                <TextView
                    android:id="@+id/tv_diary_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@{viewModel.descriptionTextLabel}"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
</layout>