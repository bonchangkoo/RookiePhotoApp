<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="user_auth"
        android:title="@string/text_user">

        <kr.co.yogiyo.rookiephotoapp.settings.SettingsDialogPreference
            android:icon="@drawable/baseline_account_circle_black_36"
            android:key="sign_dialog" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="backup_restore"
        android:title="@string/text_backup_restore">

        <kr.co.yogiyo.rookiephotoapp.settings.SettingsDialogPreference
            android:icon="@drawable/baseline_cloud_upload_black_36"
            android:key="backup_dialog"
            android:summary="@string/text_summary_backup"
            android:title="@string/text_do_backup" />

        <kr.co.yogiyo.rookiephotoapp.settings.SettingsDialogPreference
            android:icon="@drawable/baseline_cloud_download_black_36"
            android:key="restore_dialog"
            android:summary="@string/text_summary_restore"
            android:title="@string/text_do_restore" />
    </PreferenceCategory>
</PreferenceScreen>